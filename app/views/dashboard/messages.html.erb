<main>
	<nav>
		<div class="nav-wrapper">
			<div class="col s12"> <a href="#!" class="breadcrumb">First</a> <a href="#!" class="breadcrumb">Second</a> <a href="#!" class="breadcrumb">Third</a> </div>
		</div>
	</nav>
	<div class="row">
		<div class="col s12 m12">
			<div class="" style="padding: 0px">
				<!--  Tables Section-->
				<div id="messages" class="mailbox section">
					<div class="row">
						<div class="col s12">
							<div class="z-depth-1">
								<nav class="z-depth-0">
									<div class="nav-wrapper">
										<div class="col s10 m7">
											<form>
												<div class="input-field round-in-box"> <input id="search" type="search" required=""> <label for="search"><i class="material-icons">search</i></label> <i class="material-icons">close</i> </div>
											</form>
										</div>
										<div class="col s2 m5">
											<ul class="right">
												<!-- <li class="hide-on-small-only"><a href="#!"><i class="mdi-content-archive"></i></a></li>
												<li class="hide-on-small-only"><a href="#!"><i class="mdi-action-delete"></i></a></li>
												<li class="hide-on-small-only"><a href="#!"><i class="mdi-action-settings"></i></a></li>
												<li class="hide-on-med-and-up"> <a href="#!" class="dropdown-button" data-activates="dropdown1"><i class="mdi-navigation-more-vert"></i></a> -->
													<!-- <ul id="dropdown1" class="dropdown-content slim">
														<li><a href="#!"><i class="mdi-content-archive"></i></a></li>
														 <li><a href="#!" id="destroy"><i class="mdi-action-delete"></i></a></li>
														<li class="divider"></li>
														<li><a href="#!"><i class="mdi-action-settings"></i></a></li>
													</ul> -->
													<li><a href="#!" id="destroy"><i class="mdi-action-delete"></i></a></li>
												</li>
											</ul>
										</div>
									</div>
								</nav>
								<ul class="tabs tab-demo" style="width: 100%;">
									<li class="tab col s4"><a class="active" href="#main-mailbox">Main<span class="new badge">2</span></a></li>
									<li class="tab col s4"><a href="#social-mailbox" class="">Social</a></li>
									<li class="tab col s4"><a href="#updates-mailbox">Updates<span class="alert badge">1</span></a></li>
									<div class="indicator" style="right: 629px; left: 0px;"></div>
								</ul>
							</div>
						</div>
						<div class="col s12">
							<div class="card-panel no-padding">
								<!--  MAIN mailbox START-->
								<div id="main-mailbox" style="display: block;">
									<form action="#">
										<table class="list bordered highlight">
											<thead>
												<tr>
													<th colspan="2" class="first">Today</th>
												</tr>
											</thead>
											<tbody>
												<% @messages.each do |msg| %>
													 <tr class="<%=msg.status == true ? 'readed' : 'unreaded' %>">
														<td class="check-col"><input type="checkbox" id="<%=msg.id%>" class="filled-in" name="messages" value="<%=msg.id%>">
                                  							<label for="<%=msg.id%>"></label></td>
														<td>
															<a href="#!" class="cell-row">
																<div class="cell"> <span class="simple-avatar small circle left teal accent-3"><%=msg.name[0] %></span>
																	<h6><%=msg.name %></h6>
																	<p>
																		<%=msg.listing.title%>
																	</p>
																</div>
																<div class="cell w2 last"> <span class="new badge static"></span> <span class="datetime"><%=time_ago_in_words(msg.created_at) %> ago</span> </div>
															</a>
														</td>
													</tr>
													<%end%>												
											</tbody>
										</table>
									</form>
									<div class="center-align row">
										<ul class="pagination">
											<li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
											<li class="active"><a href="#!">1</a></li>
											<li class="waves-effect"><a href="#!">2</a></li>
											<li class="waves-effect"><a href="#!">3</a></li>
											<li class="waves-effect"><a href="#!">4</a></li>
											<li class="waves-effect"><a href="#!">5</a></li>
											<li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
										</ul>
									</div>
								</div>
								<!--  MAIN mailbox END -->
								<!--  SOCIAL mailbox START -->
								<div id="social-mailbox" style="display: none;">
									
								</div>
								<!--  SOCIAL mailbox END -->
								<!--  UPDATES mailbox START -->
								<div id="updates-mailbox" style="display: none;">
									
								</div>
								<!--  UPDATES mailbox END -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
	<!-- container END -->
</main>
<script type="text/javascript">
$( document ).ready(function() { 	
	$('#destroy').click(function  (argument) {	
	 var ids = [];
	  $.each($("input[name='messages']:checked"), function(){            
	      ids.push($(this).val());
	  });
	  if(ids.length > 0){
	    $.ajax({
	       type: "GET",// GET in place of POST      
	       url: "/destroy_messages",
	       data : {ids:ids}
	  });
	  }  
	})
})
</script>
<style type="text/css">
.readed{
  background-color: #F5FCFF;
}
</style>