 <div class="row"> 
   <div class="col s12 m12">   
   <div class="card-panel grey lighten-5 z-depth-1">
          <%#= link_to 'New user', new_user_path, :class => 'btn-floating btn-small waves-effect waves-light ' %>
          <a class="waves-effect waves-light btn-floating modal-trigger" href="#modal1"> <i class="material-icons">play_for_work</i></a>
          <%= link_to "Excel", users_path(format: "xls") , :class => 'btn-floating btn-small waves-effect waves-light ' %>
        </div>
    </div>
    <div class="col s12 m12">    
        <div class="card-panel grey lighten-5 z-depth-1">       
        <div class="row">
            <%= form_tag users_path, :method => 'get', :autocomplete => "off" do %>
              <div class="col m4 right">
                <%= text_field_tag :search, params[:search] , :id=>"search",:placeholder=>"Search" ,:style => 'width: 85%;'%>             
                <button class="btn-floating btn-small waves-effect waves-light" type="submit">
                    <i class="material-icons">search</i>
                  </button>

                <%#= submit_tag 'Search',:class => 'btn btn-small waves-effect waves-light'%>            
              </div>                    
            <% end %>
        </div>
        <ul class="collapsible" data-collapsible="accordion">
          <% @users.each do |user| %>
            <li>
              <div class="collapsible-header"><i class="material-icons">email</i><%= user.email %><i class="material-icons right">info</i></div>
              <div class="collapsible-body">
              <p>Registred at: <%= user.created_at.strftime("%B %d, %Y") %></p>
              <%if user.last_sign_in_at.present? %>
              <p>Last sign at: <%= user.last_sign_in_at.strftime("%B %d, %Y")%>(<%=time_ago_in_words(user.last_sign_in_at)%>)</p>
              <%end%>
              <p>Total Signs: <%= user.sign_in_count %></p>
              </div>
            </li>
          <% end %>
      </ul>
        
      <%= will_paginate @users %>
        
      <!-- -->
        </div>
      
    </div>
  </div>
</main>  


<style type="text/css">
  .collapsible-body p {
    margin: 0;
    padding: 5px 26px !important;
}
