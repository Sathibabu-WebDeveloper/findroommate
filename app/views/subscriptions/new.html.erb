<div class="row">
  <div class="col s12 m3" style="">
          <%=render 'user_dashboard/navigation' %>
    </div>
   <div class="col s12 m6">
  <div class="card green lighten-2 darken-1">
    <div class="card-content white-text">
      <span class="card-title"><%=@plan.title%></span>
      <p>$<%=@plan.price.to_i%> per year</p>
      <p><%=@plan.description%></p>
    </div>   
  </div>


<%= simple_form_for(@subscription,:validate => true) do |f| %>
  <%= f.error_notification %>
  <%=f.input :plan_id , :as => :hidden%>
<div class="row">
  <div class="input-field col s12">
    <%= f.input :email %>
  </div>
</div>
<div class="form-actions">
  <%= f.button :submit,:class => 'btn  waves-effect waves-light'  %>
  <%= link_to 'Back', subscriptions_path,:class => 'btn  waves-effect waves-light' %>
</div>
<% end %>

</div>
</div>
